<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<div class="container">
  <% @photos.each do |photo| %>
    <%= link_to photo do %>
      <div class="col-xs-6">
        <%= image_tag(photo.file_url, class: 'col-xs-12') %>
        <label class="col-xs-12"><%= photo.description %></label>
      </div>
    <% end %>
  <% end %>
</div>

<br>

<%= link_to 'New Photo', new_photo_path %>
